<!-- Login-siden hvor du skal indtaste dit brugnavn og password. -->

<div id="text-center" style="width:100%;">
    <div class="agile">
        <div class="login-form">
            <form action='/login' method='post' class="form-signin" style="padding-bottom:3px;">
                <img class="mb-4" src="../../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
                <h1 class="h3 mb-3 font-weight-normal">Login</h1>
                <p class="h7 mb-3 font-weight-normal">Udfyld loginoplysningerne herunder for at anvende applikationen.</p>
                <!-- Input-felt til email adresse til login -->
                <label for="inputEmail" class="sr-only">E-mail addresse</label>
                <input type="text" id="inputEmail" name="logemail" class="form-control" placeholder="E-mail addresse" required="">
                <!-- Input-felt til password adresse til login -->
                <label for="inputPassword" class="sr-only">Kodeord</label>
                <input type="password" name="logpassword" id="inputPassword" class="form-control" placeholder="Kodeord"
                    required="">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="LOGIN NU"></input>
            </form>
            <div class="form-signin" style="margin-top:0; padding-top:0;">
                <button class="btn btn-lg btn-primary btn-block" onclick="history.back()">TILBAGE</button>
                <br>
                <a href="signup" target="_self">Har du ikke allerede en bruger?</a>
            </div>
        </div>
    </div>
</div>